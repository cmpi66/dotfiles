#!/bin/env bash

## A script to run as a cronjob backing up my data with rclone

## ZPGEN MIRRORED 1tb HDD

flock -n /tmp/zfs-drive.lock /usr/bin/rclone copy --s3-upload-cutoff=0 --transfers 20 --retries 5 /zpgen IdriveEncrypt:zfsgen
# flock -n /tmp/reddit-courses.lock /usr/bin/rclone sync  --s3-upload-cutoff=0 --transfers 20 --retries 5 /mnt/nasnfs/shared/z-reddit IdriveEncrypt:z-reddit
# flock -n /tmp/copywriting.lock /usr/bin/rclone copy --s3-upload-cutoff=0  --transfers 20 --retries 5 /home/chris/copywriting IdriveEncrypt:copywriting
flock -n /tmp/media-syncthing.lock /usr/bin/rclone copy --s3-upload-cutoff=0 --transfers 20 --retries 5 /home/chris/media IdriveEncrypt:mediasync
flock -n /tmp/mail.lock /usr/bin/rclone copy --s3-upload-cutoff=0 --transfers 20 --retries 5 /home/chris/.local/share/mail IdriveEncrypt:allmail
flock -n /tmp/src-syncthing.lock /usr/bin/rclone copy --s3-upload-cutoff=0 --transfers 20 --retries 5 /home/chris/.local/.src IdriveEncrypt:srcsync
flock -n /tmp/gen-dl.lock /usr/bin/rclone copy --s3-upload-cutoff=0 --transfers 20 --retries 5 /home/chris/dl IdriveEncrypt:downloadsgentoo
flock -n /tmp/kdb.lock /usr/bin/rclone copy -v --s3-upload-cutoff=0 --transfers 20 --retries 5 /home/chris/.local/share/kdb/ IdriveEncrypt:kdb
flock -n /tmp/android.lock /usr/bin/rclone copy -v --s3-upload-cutoff=0 --transfers 20 --retries 5 /home/chris/.local/share/android-backup/ IdriveEncrypt:grapheneos-backup
flock -n /tmp/anki.lock /usr/bin/rclone copy -v --s3-upload-cutoff=0 --transfers 20 --retries 5 /home/chris/.local/share/Anki2/ IdriveEncrypt:anki-backup
