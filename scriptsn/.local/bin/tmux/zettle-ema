#!/bin/env bash

# this is a script replaces my old zettlekasten command. It cd's into my zettlekasten and runs emanote just in case I want to read the notes on firefox.

has-session() {
  tmux has-session -t zettle 2>/dev/null
}

if has-session; then
  alacritty --class ema,ema --config-file /home/chris/.config/alacritty/tmux.toml -e tmux attach-session -t zettle
else

  tmux new-session -s zettle -n ema -d 'cd ~/.local/.src/zettlekasten; killall emanote; emanote run --port=8080; zsh -i'
  tmux new-window -t zettle:2 -n notes 'cd ~/.local/.src/zettlekasten/; nvim index.md; zsh -i'
  # tmux new-window  -t zettle:3 -n ema   'cd ~/.local/.src/zettlekasten; killall emanote; emanote run --port=8080; zsh -i'
  tmux select-window -t zettle:2
  alacritty --class ema,ema --config-file /home/chris/.config/alacritty/tmux.toml -e tmux attach-session -t zettle

fi
