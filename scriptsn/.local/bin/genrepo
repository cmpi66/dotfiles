#!/bin/sh

## This script copies all my portage files to my gentoo repo

GENREP=/home/chris/repos/gentoo/all/
# GENREP="/home/chris/test2/"

cd $GENREP && doas rm -rf * && doas cp -ir  /etc/portage/* $GENREP && doas bat -p /var/lib/portage/world  > world && doas rm $GENREP/make.profile && doas chown -R chris:chris $GENREP && git add . && git commit -m 'updates' && git push

