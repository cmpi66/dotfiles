#!/bin/env bash

export WM="hyprland"

case "$(printf "󰄄 screenshot\n󰍹 screenshotregion\n save to clipboard\n󰙒 anotate" | tofi --width 20% --height 20% --prompt-text 'Screens: ')" in
'󰄄 screenshot') sleep 1 && hyprshot -m output -m active ;; # using sleep here so bemenu wont show up in screenshot
'󰍹 screenshotregion') hyprshot -m region ;;
' save to clipboard') hyprshot -m region --clipboard-only ;;
'󰙒 anotate') hyprshot -m region --raw | satty -f - ;;
*) exit 0 ;;
esac

