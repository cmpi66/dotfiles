#!/bin/bash

# test-integer: evaluate the value of an integer

# INT=-5
#
echo -n "Please enter an integer -> "
read int

if [[ "$int" =~ ^-?[0-9]+$  ]]; then
  if  (("$int" == 0)); then
  echo "$int is zero"
else
  if (("$int" < 0)); then
    echo "$int is negative"
  else
    echo "$int is positve"
  fi
  if (( $((int % 2)) == 0 )); then
    echo "$int is even"
  else
    echo "$int is odd"
  fi

fi
else 
  echo "INT is not an integer." >&2
  exit 1
fi

